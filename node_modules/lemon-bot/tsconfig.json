{
  "compilerOptions": {
    "target": "es6", // cannot be es5 because I have Error extends related code
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "strictBindCallApply": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}